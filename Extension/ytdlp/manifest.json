{
  "manifest_version": 2,
  "name": "Download Audio/Video",
  "version": "1.0",
  "description": "Send current tab URL to local server",
  "permissions": ["tabs", "activeTab", "notifications"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["http://localhost:5000/*"]
}
